extends ../layouts/main-layout.pug
block styles 
    link(rel="stylesheet" href="/css/forms.css")

block content
    form(action="/admin/products" method="POST")
        input(type="hidden" name="id" value=`${product.id}`)
        .form-group.row
            label(for="name").col-sm-2.col-form-label Product Name
            .col-sm-10
                input(type="text" name="name" value=`${product.name}`).form-control#name
        .form-group.row
            label(for="image").col-sm-2.col-form-label Image
            .col-sm-10
                input(type="text" name="image" value=`${product.imageUrl}`).form-control#image
        .form-group.row
            label(for="categoryid").col-sm-2.col-form-label Image
            .col-sm-10
                select(name="categoryid").form-control
                    option(value ="-1") Select Category
                    each category in categories 
                        option(value=`${category.id}` selected=(category.id===product.categoryid)) #{category.name}
        .form-group.row
            label(for="price").col-sm-2.col-form-label Price
            .col-sm-10
                input(type="text" name="price" value=`${product.price}`).form-control#price
        .form-group.row
            label(for="description").col-sm-2.col-form-label Description
            .col-sm-10
                input(type="text" name="description" value=`${product.description}`).form-control#description
            
        .form-group.row
            .col-sm-10.offset-sm-2
                input(type="submit" name="ProductSubmit" value="Save Product").btn.btn-primary

    script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js")
    script(src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js")
