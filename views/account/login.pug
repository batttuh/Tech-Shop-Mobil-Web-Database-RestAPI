extends ../layouts/main-layout.pug
block styles 
    link(rel="stylesheet" href="/css/forms.css")

block content
    form(action="/login" method="POST")
        .form-group.row
            label(for="email").col-sm-2.col-form-label Email
            .col-sm-10
                input(type="text" name="email").form-control#email

        .form-group.row
            label(for="password").col-sm-2.col-form-label Password
            .col-sm-10
                input(type="password" name="password").form-control#password
            
        .form-group.row
            .col-sm-10.offset-sm-2
                input(type="submit" value="Submit").btn.btn-primary

    script(src="https://code.jquery.com/jquery-3.2.1.slim.min.js")
    script(src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js")
    script(src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js")
